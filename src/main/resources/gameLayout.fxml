<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Rectangle?>
<?import java.net.URL?>
<Pane fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml">
    <BorderPane fx:id="gameBoard">
        <left>
            <VBox alignment="TOP_CENTER" spacing="16" style="-fx-padding: 30 20 0 20;" prefWidth="160">
                <Label fx:id="holdLabel" text="Hold:" styleClass="scoreLabel"/>
                <GridPane fx:id="holdBrickPanel" hgap="0" vgap="2" styleClass="nextBrick" style="-fx-padding: 10px;"/>
            </VBox>
        </left>
        <center>
            <Pane prefWidth="250" prefHeight="520" layoutX="20" layoutY="20">
                <clip>
                    <Rectangle x="20" y="25" width="210" height="483"/>
                </clip>
                <Group fx:id="gridLines" layoutX="20" layoutY="25"/>
                <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="25" layoutX="20"/>
                <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
            </Pane>
        </center>
        <right>
            <VBox alignment="TOP_CENTER" spacing="16" style="-fx-padding: 30 20 0 20;" prefWidth="160">
                <Label fx:id="scoreTitleLabel" text="SCORE" styleClass="scoreLabel"/>
                <Label fx:id="scoreLabel" text="0" styleClass="scoreValue"/>
                <Label fx:id="highScoreTitleLabel" text="HIGH SCORE" styleClass="scoreLabel"/>
                <Label fx:id="highScoreLabel" text="0" styleClass="scoreValue"/>
                <Label fx:id="nextBrickLabel" text="Next Brick:" styleClass="scoreLabel"/>
                <GridPane fx:id="nextBrickPanel" hgap="0" vgap="2" styleClass="nextBrick" style="-fx-padding: 10px;"/>
            </VBox>
        </right>
    </BorderPane>

    <Group fx:id="groupNotification" layoutX="195" layoutY="203"/>
    <Group fx:id="groupGameOver" layoutX="183" layoutY="175"/>
    <Group fx:id="groupPause" layoutX="183" layoutY="175"/>
    <Group fx:id="groupControls" layoutX="183" layoutY="175"/>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>