<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Rectangle?>
<?import java.net.URL?>
<Pane fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml">
    <BorderPane fx:id="gameBoard">
        <left>
            <VBox alignment="TOP_CENTER" spacing="16" style="-fx-padding: 30 20 0 20;" prefWidth="160">
                <Label fx:id="holdLabel" text="Hold:" styleClass="scoreLabel"/>
                <GridPane fx:id="holdBrickPanel" hgap="2" vgap="2" styleClass="nextBrick" style="-fx-padding: 10px;"/>
            </VBox>
        </left>
        <center>
            <Pane styleClass="gameBoard" prefWidth="250" prefHeight="520" layoutX="20" layoutY="20">
                <clip>
                    <Rectangle width="250" height="520"/>
                </clip>
                <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="25" layoutX="20"/>
                <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
            </Pane>
        </center>
        <right>
            <VBox alignment="TOP_CENTER" spacing="16" style="-fx-padding: 30 20 0 20;" prefWidth="160">
                <Label fx:id="scoreTitleLabel" text="SCORE" styleClass="scoreLabel"/>
                <Label fx:id="scoreLabel" text="0" styleClass="scoreValue"/>
                <Label fx:id="nextBrickLabel" text="Next Brick:" styleClass="scoreLabel"/>
                <GridPane fx:id="nextBrickPanel" hgap="2" vgap="2" styleClass="nextBrick" style="-fx-padding: 10px;"/>
            </VBox>
        </right>
    </BorderPane>

    <Group fx:id="groupNotification" layoutX="195" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>
    <Group fx:id="groupPause" layoutX="183" layoutY="175"/>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>